// RCS Data
class rcs_mediaformat in "urn:PEContentSchema"
{
  element encoding: string
  element packaging: string
  element numChannels (num_channels): int
  element sampleRate (samplerate): int
}

class rcs_timepoint in "urn:PEContentSchema"
{
  element time: float
  element description: string
}

class rcs_media in "urn:PEContentSchema"
{
  child MediaFormat (format): one of rcs_mediaformat
  child TimePoint (timepoints): list of rcs_timepoint
}	

class rcs_artist in "urn:SongSchema"
{
  element name: string
  element GUID (guid): string
  element internalID (internal_id): int
  element sequenceNumber (sequence_number): int
}

class rcs_song in "urn:SongSchema"
{
  element title:string := "untitled"
  element GUID (guid) : string
  element internalID (internal_id):int
  element category:string
  element opening:string
  element ending:string
  
  child Artist (artists) : list of rcs_artist
  child Media (media) : one of rcs_media
}
